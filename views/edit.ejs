<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-4 md:px-10 py-5 text-white">
    <h1 class="text-xl">Edit Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/update/<%= post._id %>" method="post" enctype="multipart/form-data" class="space-y-4">
        <label for="postimagechg" class="font-semibold py-2 flex">Change Image:</label>
        <div class="card w-full md:w-72 relative">
            <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="" srcset="">
            </div>
        </div>
        <input class="block w-full md:w-1/3 py-2" type="file" name="postimage">
        <input class="text-black block w-full md:w-1/3 px-3 py-2 mt-2 border-2 rounded-md" type="text" value="<%= post.title %>" name="title">
        <textarea class="text-black block w-full md:w-1/3 h-60 px-3 py-2 mt-2 border-2 rounded-md" type="text" name="description"><%= post.description %></textarea>
        <input class="block w-full md:w-1/3 px-3 py-2 mt-2 rounded-md bg-red-700" type="submit" value="Submit">
    </form>
</div>
<% include ./partials/footer.ejs %>
