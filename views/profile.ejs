<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center justify-center mt-10 xl:mt-18">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 shadow-lg hover:bg-zinc-300 transition-colors cursor-pointer">
                <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-44 h-44 bg-zinc-200 rounded-full overflow-hidden shadow-xl">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="<%= user.name %>'s profile image" srcset="">
            </div>
        </div>
        <h1 class="text-3xl font-semibold text-white mt-8 text-center"><%= user.name %></h1>
        <h3 class="text-xl text-gray-300">@<%= user.username %></h3>
        <a href="/add" class="px-8 py-2 mt-6 rounded-lg bg-red-700 text-xs font-semibold transition-all duration-300 hover:bg-red-600">Add New Post</a>
    </div>
    <div class="cards grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-10 px-10 mt-14">
        <div class="card transition-transform transform hover:scale-105">
            <a href="/show/posts">
                <div class="w-full h-32 xl:h-52 bg-zinc-200 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="Uploaded Pin" srcset="">
                </div>
                <p class="inline-block text-xl font-semibold mt-3">Your Uploaded Pins</p>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5>
            </a>
        </div>
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function() {
        document.querySelector("#uploadform input").click();
    });

    document.querySelector("#uploadform input").addEventListener("change", function() {
        document.querySelector("#uploadform").submit();
    });
</script>
